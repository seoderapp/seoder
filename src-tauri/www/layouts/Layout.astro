---
import "../styles/styles.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const mac = import.meta.env.MAC_OS || "";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/assets/icon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {mac ? <div data-tauri-drag-region class="titlebar" /> : null}
    <slot />
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }
      html {
        font-family: "Inter", system-ui, sans-serif;
        background-color: #f6f6f6;
        height: 100%;
      }
      body {
        padding: 0;
        margin: 0;
        overflow: hidden;
        height: 100%;
      }
      .titlebar {
        height: 28px;
        position: fixed;
        left: 0;
        right: 0;
      }
    </style>
  </body>
</html>
