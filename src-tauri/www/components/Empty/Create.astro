<div class="card">
  <div class="card-body">
    <div id="empty-list">
      <div class="p">
        <div class="title">No Campaigns yet</div>
        <div>To get started start a new campaign</div>
        <button class="panel-btn button btn-primary full-w">
          Add Campaign
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .title {
    font-weight: 700;
    font-size: 1rem;
  }
  .p {
    padding: 0.6rem;
  }
</style>

<script>
  const campaignCreateForm = document.getElementById("campaign-create-form");
  const empty = document.getElementById("empty-list");

  function addCampaign() {
    if (campaignCreateForm) {
      campaignCreateForm.className = "block";
    }
  }

  if (empty) {
    empty.querySelector("button").addEventListener("click", addCampaign);
  }
</script>
