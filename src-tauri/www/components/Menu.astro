---
import NewCampaignButton from "./Buttons/NewCampaignButton.astro";
import RunAllButton from "./Buttons/RunAllButton.astro";
import { RunSelectedButton } from "./Buttons/RunSelectedButton";
import SettingsButton from "./Buttons/SettingsButton.astro";
import LogoLight from "./Logos/LogoLight.astro";
---

<div class="space">
  <div class="flex-row spaceless full-w center">
    <div class="panel-btn-ctn">
      <LogoLight />
    </div>
    <div class="panel-btn-ctn full-w">
      <SettingsButton />
    </div>
  </div>
  <div class="flex-row spaceless full-w">
    <div class="panel-btn-ctn full-w gutter">
      <NewCampaignButton />
    </div>
  </div>

  <div class="flex-row spaceless">
    <RunSelectedButton client:visible />
    <RunAllButton />
  </div>
</div>

<style>
  .space {
    padding-bottom: 0.8rem;
  }
</style>
