---
import Close from "./Svgs/Close.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="settings-bar">
  <h3>{title}</h3>
  <button>
    <Close />
  </button>
</div>

<style>
  .settings-bar {
    display: flex;
    place-items: center;
    justify-content: space-between;
    padding: 0.8rem 1.2rem;
    border: 1px solid rgba(47, 39, 104, 0.1);
    font-style: normal;
    font-weight: 600;
    font-size: 1rem;
    color: #2f2768;
  }

  .settings-bar button {
    background-color: transparent;
  }
</style>
