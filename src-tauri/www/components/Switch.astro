---
export interface Props {
  id: string;
}

const { id } = Astro.props;
---

<label class="switch">
  <input name="proxy" id={id} type="checkbox" />
  <span class="slider"></span>
</label>

<style>
  .switch {
    position: relative;
    display: inline-block;
    width: 33px;
    height: 8px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    border-radius: 34px;
  }

  .slider:after {
    position: absolute;
    content: "";
    height: 16px;
    width: 16px;
    left: -6px;
    bottom: -4px;
    background-color: #ccc;
    transition: transform 0.3s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: rgba(47, 39, 104, 0.6);
  }

  input:checked + .slider:after {
    background-color: #2f2768;
  }

  input + .slider {
    background-color: #fff;
    border: 1px solid #ccc;
  }

  input:focus + .slider {
    box-shadow: 0 0 1px #2f2768;
  }

  input:checked + .slider:after {
    -webkit-transform: translateX(24px);
    -ms-transform: translateX(24px);
    transform: translateX(24px);
  }
</style>
