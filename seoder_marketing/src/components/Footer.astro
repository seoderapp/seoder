---
import FooterBg from "./Svgs/FooterBg.astro";
import Twitter from "./Svgs/Twitter.astro";

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="footer-container">
    <div class="container">
      <ul>
        <li>
          <a
            href="https://usefathom.com/ref/IRZNZG"
            rel="noopener"
            target="_blank">Analytics</a
          >
        </li>
        <li>
          <a href="mailto:support@seoder.io">Support</a>
        </li>
        <li>
          <a href="/payments">Buy Now</a>
        </li>
        <li>
          <a href="/faq">FAQ</a>
        </li>
        <li>
          <a href="/about">About</a>
        </li>
        <li>
          <a href="/privacy-policy">Privacy Policy</a>
        </li>
        <li>
          <a href="/terms-of-service">Terms of Service</a>
        </li>
        <li>
          <a href="https://twitter.com/seoderio" rel="noopener" target="_blank"
            ><Twitter />
          </a>
        </li>
      </ul>
    </div>
    <p class={"cc"}>
      Seoder &copy; {currentYear}
    </p>
  </div>
  <div class="footer-bg">
    <FooterBg />
  </div>
</footer>

<style>
  footer {
    position: relative;
    overflow: hidden;
  }

  footer ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    gap: 1.4rem;
    display: flex;
  }

  footer li {
    display: inline;
  }

  footer a {
    color: #2f2768;
    font-size: 1rem;
    text-decoration: none;
    font-weight: 600;
  }

  .footer-container {
    padding: 2.4rem 2rem;
    margin: auto;
    z-index: 2;
    max-width: var(--max-width);
  }

  .footer-bg {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0px;
    pointer-events: none;
    z-index: -1;
  }

  .container {
    gap: 1.5rem;
    display: flex;
    flex-direction: row;
    padding: 2rem 0;
  }

  .cc {
    font-size: 0.76rem;
    opacity: 0.7;
  }

  @media only screen and (max-width: 800px) {
    footer {
      background: rgba(232, 192, 26, 0.17);
    }
    footer ul {
      flex-direction: column;
    }
    .footer-bg {
      display: none;
    }
  }
</style>
