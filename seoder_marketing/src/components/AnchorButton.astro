---
export interface Props {
  title?: string;
  href?: string;
}

const { title, href } = Astro.props;
---

<a href={href ?? "/"} class="buy-btn">{title ?? "BUY NOW"}</a>

<style>
  .buy-btn {
    background-color: #e8c01a;
    border-radius: 4px;
    padding: 1rem 2.5rem;
    color: #2f2768;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.5rem;
    display: block;
    text-align: center;
  }
</style>
