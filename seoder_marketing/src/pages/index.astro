---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
import Apple from "../components/Logos/Apple.astro";
import Linux from "../components/Logos/Linux.astro";
import Windows from "../components/Logos/Windows.astro";
import Navbar from "../components/Navbar.astro";
import AnchorButton from "../components/AnchorButton.astro";
---

<Layout title="Seoder - The marketing lead generation tool">
  <main>
    <Navbar />
    <div class="prog">
      <section>
        <div class="flex-wrap">
          <div>
            <h1 class="text-primary">Find keywords in bulk links quickly</h1>
            <p class="instructions text-primary">
              Import thousands of URLs and identify keywords {`youâ€™re`} looking for
            </p>
            <AnchorButton href="/payments" title={"BUY NOW"} />
            <p class="small">Try free 7 day trial</p>
          </div>
          <div>
            <img
              src="/bg.png"
              class="bg"
              height={333}
              width={333}
              alt="Seoder app intro display"
            />
          </div>
        </div>
      </section>

      <section>
        <p class="highlight">Features</p>
        <h2 class="text-primary">Blazingly fast keyword searcher</h2>
      </section>

      <section>
        <p class="highlight center">Downloads</p>

        <h3 class="text-primary">Available for all major platforms</h3>

        <ul role="list" class="link-card-grid">
          <Card
            href="/releases/Seoder_0.0.1_aarch64.dmg"
            title="Desktop Mac Silicon"
            body="Pre-release arch64 M1 chip"
          >
            <Apple />
          </Card>
          <Card
            href="/releases/Seoder_0.0.1_universal.dmg"
            title="Desktop Mac Universal"
            body="Pre-release mac universal"
          >
            <Apple />
          </Card>
          <Card
            href="/releases/seoder_app_0.0.1_linux.app.tar.gz"
            title="Desktop Linux"
            body="Pre-release linux"
          >
            <Linux />
          </Card>
          <Card
            href="/releases/seoder_app_0.0.1_x64_en-US.msi"
            title="Desktop Windows"
            body="Pre-release windows"
          >
            <Windows />
          </Card>
        </ul>
      </section>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    position: relative;
    max-width: 100ch;
  }
  .small {
    font-size: 0.7rem;
  }
  .center {
    text-align: center;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    padding: 0;
    max-width: 25rem;
  }
  .text-primary {
    color: #2f2768;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(22ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
  .prog {
    padding: 1.5rem;
  }
  .bg {
    width: 100%;
  }
  .flex-wrap {
    flex-wrap: wrap;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    text-align: left;
  }
  .flex-wrap a {
    background: #d9d9d9;
    border-radius: 4px;
    padding: 0.5rem 1rem;
    color: #000;
    text-decoration: none;
  }
  .highlight {
    color: #e8c01a;
  }
</style>
