---
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import { getDynamicPage } from "../../utils/get-dynamic-page";

export function getStaticPaths() {
    return [
        { params: { id: "3-tips-to-avoid-internet-distractions-at-work" } },
        { params: { id: "5-ways-to-improve-your-digital-project-management" } },
        { params: { id: "7-great-productivity-apps-for-your-new-ipad" } },
    ];
}

const { id } = Astro.params;

const props = await getDynamicPage("/" + id ?? "");
---

<Layout title={props.title} {...props}>
    <main>
        <Navbar />
        <Fragment set:html={props.html} />
    </main>
    <Footer />
</Layout>
